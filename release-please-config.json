{
  "packages": {
    ".": {
      "release-type": "simple",
      "changelog-path": "CHANGELOG.md",
      "versioning": "default",
      "extra-files": [
        {
          "type": "yaml",
          "path": "bundles/latest/local-path-core/uds-bundle.yaml",
          "jsonpath": "$.packages[*].ref",
          "versioning": {
            "name": "custom",
            "parse": "^v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(-(?<flavor>.+))?$",
            "serialize": "${version}${?-|}${flavor}"
          }
        },
        "packages/uds-rke2/zarf-config.yaml",
        "packages/rook-ceph/zarf-config.yaml",
        "packages/local-path/zarf-config.yaml",
        "packages/minio/zarf-config.yaml",
        "packages/nvidia-gpu-operator/zarf-config.yaml",
        "packages/leapfrogai/zarf-config.yaml",
        "packages/uds-rke2/infrastructure/charts/Chart.yaml",
        "tasks/publish.yaml",
        "tasks/create.yaml",
        "tasks/test.yaml",
        "tasks/deploy.yaml",
        "tasks.yaml",
        "docs/MINIO.md"
      ]
    }
  }
}
